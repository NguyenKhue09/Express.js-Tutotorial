extends ../layouts/common.pug
block content
   h1 
      span.ml-3 Users
      a.btn.btn-primary.ml-2(href="/users/create") New user  
      
   .d-flex.align-items-center
      form.ml-auto(action="/users/search", method="GET", class="d-flex")
         input(type="text", name="q", class="form-control")
         button(class="btn btn-primary ml-2") Search
   if errors 
      .alert.alert-danger= error
   table.table
      tr 
         th Avatar
         th Name 
         th Phone
         th Test

      each user in users   
         tr
            td
               img.rounded-circle(src= user.avatar, width="32", height="32")
            td= user.name
            td= user.phone
            td= user.test 
            td
               a.btn.btn-light(href='/users/'+ user.id) View   